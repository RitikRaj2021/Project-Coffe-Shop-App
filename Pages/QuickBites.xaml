<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1test.Pages.QuickBites"
             Title="Quick Bites">
    <VerticalStackLayout>
        <Label Text="Quick Bites we have to offer" 
               HorizontalOptions="Center" 
               TextColor="White" 
               FontSize="Medium" 
               Margin="10">

        </Label>

        <Image Source="bagels.png" MaximumHeightRequest="100" Margin="10" HorizontalOptions="Center">

        </Image>
        
        <Frame Margin="10" BackgroundColor="Orange" BorderColor="Black" HorizontalOptions="Center">
            <Label Text="Bagel $1.50" 
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Center">
                
            </Label>
        </Frame>

        <Image Source="eggs_benidect.png" MaximumHeightRequest="100" Margin="10" HorizontalOptions="Center">

        </Image>

        <Frame Margin="10" BackgroundColor="Orange" BorderColor="Black" HorizontalOptions="Center">
            <Label Text="Eggs Benedict $6.50" 
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Center">

            </Label>
        </Frame>
    </VerticalStackLayout>
</ContentPage>